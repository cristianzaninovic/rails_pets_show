
<%= simple_form_for(@pet_post) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body %>
    <% if current_pets_user.nil? %>    
      <%= f.association :pets_user %>
    <% else %>  
      <%= f.hidden_field :pets_user, value: current_pets_user %>
    <% end %>  
  </div>
  <% @pet_post.images.each do |image| %>
    <%= f.hidden_field :images, multiple: true, value: image.signed_id %>
  <% end %>
  <%= f.file_field :images, multiple: true %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
